{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet ef migrations",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:componentName}",
                "--verbose",
                "--project",
                "src/ScreeningExchange.Infrastructure/ScreeningExchange.Infrastructure.csproj",
                "--context",
                "ApplicationDbContext",
                "--startup-project",
                "src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj"
            ],
            "group": "build"
        },
        {
            "label": "dotnet ef update",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "src/ScreeningExchange.Infrastructure/ScreeningExchange.Infrastructure.csproj",
                "--context",
                "ApplicationDbContext",
                "--startup-project",
                "src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj"
            ],
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "componentName",
            "type": "promptString",
            "description": "Informe o nome do migration:"
        },
        {
            "id": "scriptName",
            "type": "promptString",
            "description": "Informe o nome do script:"
        }
    ]
}