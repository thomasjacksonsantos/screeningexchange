{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/ScreeningExchange.Hosts.Http/ScreeningExchange.Hosts.Http.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "componentName",
            "type": "promptString",
            "description": "Informe o nome do migration:"
        },
        {
            "id": "scriptName",
            "type": "promptString",
            "description": "Informe o nome do script:"
        }
    ]
}